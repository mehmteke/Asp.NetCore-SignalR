@{
    ViewData["Title"] = "Home Page";
}

@section Scripts
{
    <script src="~/lib/microsoft/signalr/dist/browser/signalr.min.js"></script>
 
    <script type="text/javascript">

        $(document).ready(() => {
            var connection = new signalR.HubConnectionBuilder().withUrl("https://localhost:44307/MyHup");

            $("#conStatus").text(connection.connecitonState);

            connection.start().then(() => {
                $("#conStatus").text(connection.connecitonState);
            }).catch((err) => { console.log(err) });

            $("#btnNameSave").click(() => {

                connection.invoke("SendName", $("#txtName").val()).catch((err) => {
                    console.log(err);
                });
            });


            //  Server tarafındaki metota üye olmak
            connection.on("ReceiveName", (name) => {
                console.log(name);
            });
        });

    </script>
} 

 <div class="row">
      <div class="col-md-8 offset-2" >
          <input class="form-control" type="text" id="txtName"/>
          <hr />
          <button class="btn btn-primary" id="btnNameSave">İsim Kaydet</button>
          <div class="alert alert-info">
              Bağlantı Durumu :<strong id="conStatus"></strong>
          </div>
      </div>
 </div>



