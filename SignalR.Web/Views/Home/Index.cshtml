@{
    ViewData["Title"] = "Home Page";
}

@section Scripts
{
    <script src="~/lib/microsoft/signalr/dist/browser/signalr.min.js"></script>
 
    <script type="text/javascript">

        $(document).ready(() => {
            var connection = new signalR.HubConnectionBuilder().configureLogging(signalR.LogLevel.Debug).withUrl("https://localhost:44307/MyHup").build();

            $("#txtSonuc").val(connection.connectionState);

            connection.start().then(() => {
                $("#txtSonuc").val(connection.connectionState);
            }).catch((err) => { console.log(err) });

            $("#txtSonuc").val(connection.connectionState);
            $("#btnNameSave").click(() => {

                connection.invoke("SendName", $("#txtName").val()).catch((err) => {
                    console.log(err);
                });
            });


            //  Server tarafındaki metota üye olmak
            connection.on("ReceiveName", (name) => {
                console.log(name);
                $("#namesList").append(`<li class="list-group-item"> ${name}</li>`)
            });
        });
        
    </script>
} 

<div class="row">
    <div class="col-md-8 offset-2">
        <input class="form-control" type="text" id="txtName" />
        <hr />
        <button class="btn btn-primary" id="btnNameSave">İsim Kaydet</button>
        <div class="alert alert-info">
            <input class="form-control" type="text" id="txtSonuc" />
        </div>
    </div>
    <div class="col-md-8 offset-2">
         <ul class="list-group" id="namesList"></ul>
    </div>
</div>



